@model ExercicesListGenerator.Models.Exo
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/Formulaire.css">
    <title>Modification d'Entrainement</title>
</head>
<body>
    <h1>Modifier un exercice</h1>
    @using (Html.BeginForm())
    {
<div class="container">
    @Html.LabelFor(model => model.ID)
    @Model.ID
    <br>
    @Html.LabelFor(model => model.Nom) :
    @Html.TextBoxFor(model => model.Nom)

    @Html.LabelFor(model => model.Description) :
    @Html.TextAreaFor(model => model.Description)

    @Html.LabelFor(model => model.Author) :
    @Html.TextBoxFor(model => model.Author)
    <br>
    @Html.LabelFor(model => model.TypePass)
    @Html.CheckBoxFor(model => model.TypePass)
    <br>
    @Html.LabelFor(model => model.TypeShoot)
    @Html.CheckBoxFor(model => model.TypeShoot)
    <br>
    @Html.LabelFor(model => model.TypePlayMaking)
    @Html.CheckBoxFor(model => model.TypePlayMaking)
    <br>
    @Html.LabelFor(model => model.TypeAthletic)
    @Html.CheckBoxFor(model => model.TypeAthletic)
    <br>
    @Html.LabelFor(model => model.TypeGoalie)
    @Html.CheckBoxFor(model => model.TypeGoalie)
    <br>
    <br>
    @if (Model.Image != null)
    {
        <div class="polaroid">
            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))" , class="center" />
            <div class="polaroidContainer">
                <p>@Model.Nom</p>
            </div>
        </div>
    }
    <br>
    <br>
    <input type="submit" value="Envoyer" />
</div>
    }

    <br>
    <br>
    <div>
        @using (Html.BeginForm("FileUpload", "Exercice", FormMethod.Post,
                    new { enctype = "multipart/form-data" }))
        {
            @Html.TextBoxFor(model => model.ID, new { style = "display: none;" })
            <label for="file">Ajouter une Photo:</label>
            <input type="file" name="file" id="file" style="width: 10%;" />
            <input type="submit" value="Ajouter !" class="submit" />
        }
    </div>

</body>
</html>
